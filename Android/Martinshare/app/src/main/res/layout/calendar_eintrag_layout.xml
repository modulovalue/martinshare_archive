<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_dropdown_panel_martinthema"
    >

    <LinearLayout
        android:id="@+id/eintragLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/eintraggray"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/name_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Fach"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/eintragImageTyp"
                android:layout_toStartOf="@+id/eintragImageTyp"
                android:paddingLeft="15dp" />


            <ImageView
                android:id="@+id/eintragImageTyp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_hicon"
                android:padding="6dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/editIcon"
                android:layout_toStartOf="@+id/editIcon" />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_action_edit"
                android:padding="6dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="beschreibung"
            android:id="@+id/beschreibung_text"
            android:layout_marginTop="0dp"
            android:padding="7dp"
            android:textSize="14sp"
            android:background="#00FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />
    </LinearLayout>
</RelativeLayout>
