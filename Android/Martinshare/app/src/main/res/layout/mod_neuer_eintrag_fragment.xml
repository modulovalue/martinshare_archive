<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_dropdown_panel_martinthema"
    >

    <LinearLayout
        android:id="@+id/eintragLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/eintraggray"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        >


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/titelTextNeuerEintrag"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewEmpty"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/eintragH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_fa_plus"
                fab:fab_colorNormal="@color/green_500"
                fab:fab_colorPressed="@color/primaryColor"
                fab:fab_colorRipple="@color/White"
                android:onClick="neuerEintrag"
                />
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/eintragA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_fa_plus"
                fab:fab_colorNormal="@color/red_500"
                fab:fab_colorPressed="@color/primaryColor"
                fab:fab_colorRipple="@color/White"
                android:onClick="neuerEintrag"
                />
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/eintragS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_fa_plus"
                fab:fab_colorNormal="@color/grey_700"
                fab:fab_colorPressed="@color/primaryColor"
                fab:fab_colorRipple="@color/White"
                android:onClick="neuerEintrag"
                />

            <ImageView
                android:id="@+id/imageViewEmpty2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="6dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
