<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="mobile.martinshare.com.martinshare.activities.eintragen.Eintragen">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"/>

        <Spinner
            android:layout_margin="8dp"
            android:minHeight="48dp"
            android:id="@+id/artDESpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_ab_default_martinthema"/>



        <AutoCompleteTextView
            android:layout_margin="8dp"
            android:id="@+id/nameEintrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Fach"
            android:inputType="text"
            android:gravity="center_horizontal"
            android:completionThreshold="1"
            />

        <EditText
            android:layout_margin="8dp"
            android:id="@+id/beschreibungText"
            android:hint="Beschreibung"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|start"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absenden"
            android:id="@+id/sendEintrag"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
</ScrollView>